<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee                       http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <description>
        Sistema de Videos
    </description>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>CadastrarFilme</servlet-name>
        <servlet-class>br.com.corporacao.servlets.CadastrarFilme</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>br.com.corporacao.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>br.com.corporacao.servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateUsuario</servlet-name>
        <servlet-class>br.com.corporacao.servlets.UpdateUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUsuario</servlet-name>
        <url-pattern>/UpdateUsuario</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CadastrarUsuario</servlet-name>
        <servlet-class>br.com.corporacao.servlets.CadastrarUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarUsuario</servlet-name>
        <url-pattern>/CadastrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListarUsuarios</servlet-name>
        <servlet-class>br.com.corporacao.servlets.ListarUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarUsuarios</servlet-name>
        <url-pattern>/ListarUsuarios</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeletarUsuario</servlet-name>
        <servlet-class>br.com.corporacao.servlets.DeletarUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeletarUsuario</servlet-name>
        <url-pattern>/DeletarUsuario</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CadastrarFilme</servlet-name>
        <servlet-class>br.com.corporacao.servlets.CadastrarFilme</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarFilme</servlet-name>
        <url-pattern>/CadastrarFilme</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListarFilmes</servlet-name>
        <servlet-class>br.com.corporacao.servlets.ListarFilmes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarFilmes</servlet-name>
        <url-pattern>/ListarFilmes</url-pattern>
    </servlet-mapping>
     <servlet>
        <servlet-name>EncontrarFilme</servlet-name>
        <servlet-class>br.com.corporacao.servlets.EncontrarFilme</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EncontrarFilme</servlet-name>
        <url-pattern>/EncontrarFilme</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>2</session-timeout>
    </session-config>
</web-app>
